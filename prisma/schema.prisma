datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EventType {
  reservation
  exam
  workshop
  lecture
  other
}

model ScheduledEvent {
  id          String    @id @default(cuid())
  title       String
  description String?
  code        String
  type        EventType @default(other)
  groups      String[]  @default([])
  room        String
  begin       DateTime
  end         DateTime
  hosts       String[]  @default([])

  @@unique([type, groups, begin, code])
  @@index([code], type: Hash)
  @@index([type], type: Hash)
  @@index([begin(sort: Desc), code(sort: Desc)])
}

model Scrapper {
  id     String          @id @default(uuid()) @db.Uuid
  alias  String?
  tokens ScrapperToken[]
}

model ScrapperToken {
  id         Int      @id @default(autoincrement())
  token      String   @unique
  scrapper   Scrapper @relation(fields: [scrapperId], references: [id])
  scrapperId String   @db.Uuid
  when       DateTime @default(now())
}
